+    public function work($id)
+    {
+        if ($book = $this->model->read($id)) {
+            // [START lookup_books]
+            $service = new Google_Service_Books($this->client);
+            $options = ['orderBy' => 'relevance'];
+            $results = $service->volumes->listVolumes($book['title'], $options);
+            // [END lookup_books]

+            foreach ($results as $result) {
+                $volumeInfo = $result->getVolumeInfo();
+                if ($volumeInfo === null) {
+                    return false;
+                }
+                $imageInfo = $volumeInfo->getImageLinks();
+                if ($imageInfo === null) {
+                    return false;
+                }
+                if ($thumbnail = $imageInfo->getThumbnail()) {
+                    $book['image_url'] = $thumbnail;
